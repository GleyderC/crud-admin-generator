{% extends 'ag_base/backend.html.twig' %}

{% block body_params %}class="skin-black"{% endblock %}
{% block container %}
  <section class="content">
    <div class="row text-center">
        <div class="col-xs-4" style="float:none; display:inline-block;">
            <div class="box">
                <div class="box-body">
                    <form action="{{ path('admin_login_check') }}" method="post" class="" >
                        {{ error }}
                        <div class="form-group">
                            <label> Username </label>
                            <input class="form-control" type="text" name="_username" value="{{ last_username }}" />
                        </div>
                        <div class="form-group">
                            <label> Password </label>
                            <input class="form-control" type="password" name="_password" value="" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="submit" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

{%endblock%}